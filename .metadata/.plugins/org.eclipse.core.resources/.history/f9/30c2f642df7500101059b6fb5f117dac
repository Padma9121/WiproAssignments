package com.example.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.*;

import com.example.entities.QuizEntity;
import com.example.service.QuizService;

@RestController
@RequestMapping("/api/questions")
public class QuizController {

    @Autowired
    private QuizService questionService;

    @PostMapping
    public QuizEntity createQuestion(@RequestBody QuizEntity question) {
        return questionService.addQuestion(question);
    }

    @GetMapping
    public List<QuizEntity> getAllQuestions() {
        return questionService.getAllQuestions();
    }

    @GetMapping("/{id}")
    public QuizEntity getQuestion(@PathVariable Long id) {
        return questionService.getQuestionById(id);
    }

    @DeleteMapping("/{id}")
    public void deleteQuestion(@PathVariable Long id) {
        questionService.deleteQuestion(id);
    }
}
